<div class="w-full max-w-6xl max-h-full rounded-lg overflow-hidden mx-auto">
  <div class="py-4 px-6">
    <%= form_with(model: @post, local: true) do |form| %>
      <% if post.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h2>
          <ul>
            <% post.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
      <h2 class="text-center font-bold text-gray-700 text-3xl">Post</h2>
      <span class="mt-1 text-center text-gray-600">Post Title</span>
      <%= form.text_field :title, class: "flex content-center border-b border-b-4 w-full border-grey-500 py-2 text-center font-semibold" %><br />
      <span class="mt-1 text-center text-gray-600">Post Content</span>
      <%= form.text_area(:content, size: "500x6", class:"w-full h-64 mt-2 py-2 px-4 bg-gray-100 text-gray-700 border border-gray-300 rounded  block appearance-none placeholder-gray-500 focus:outline-none focus:bg-white") %><br />
      <div class="flex flex-wrap -mx-3">
        <div class="w-full md:w-1/6 px-3">
          <%= form.submit "Publish", class: "text-white bg-indigo-500 border-0 py-2 px-6 focus:outline-none hover:bg-indigo-600 rounded text-lg" %>
        </div>
        <div class="hover:bg-blue-500 text-white bg-indigo-500 border-0 py-2 px-6 focus:outline-none hover:bg-indigo-600 rounded text-lg">
          <%= link_to 'Home', authenticated_root_path, class:"text-white text-opacity-100 visited:text-white" %>
        </div>
      </div>
      <% end %>
  </div>
</div>
