<div class="container-md"><body class="bg-white font-family-karla h-screen">
    <div class="w-full flex flex-wrap">
      <div class="w-full md:w-1/2 flex flex-col">
        <div class="flex justify-center md:justify-start pt-12 md:pl-12 md:-mb-12">
          <div class="flex flex-col justify-center md:justify-start my-auto pt-8 md:pt-0 px-8 md:px-24 lg:px-32">
            <p class="text-center text-3xl">Sign up</p>
            <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {:class => "flex flex-col pt-3 md:pt-8" }) do |f| %>
              <%= render "devise/shared/error_messages", resource: resource %>
              <div class="flex flex-col pt-4">
                <%= f.label :email, class: "text-lg" %><br />
                <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 mt-1 leading-tight focus:outline-none focus:shadow-outline" %>
              </div>
              <div class="flex flex-col pt-4">
                <%= f.label :first_name, class: "text-lg" %><br />
                <%= f.text_field :first_name, autofocus: true, autocomplete: "email", class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 mt-1 leading-tight focus:outline-none focus:shadow-outline" %>
              </div>
              <div class="flex flex-col pt-4">
                <%= f.label :last_name, class: "text-lg" %><br />
                <%= f.text_field :last_name, autofocus: true, autocomplete: "email", class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 mt-1 leading-tight focus:outline-none focus:shadow-outline" %>
              </div>
              <div class="flex flex-col pt-4">
                <%= f.label :password, class: "text-lg" %>
                <% if @minimum_password_length %>
                  <em>(<%= @minimum_password_length %> characters minimum)</em>
                <% end %><br />
                <%= f.password_field :password, autocomplete: "new-password", class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 mt-1 leading-tight focus:outline-none focus:shadow-outline" %>
              </div>
              <div class="flex flex-col pt-4">
                <%= f.label :password_confirmation, class: "text-lg" %><br />
                <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 mt-1 leading-tight focus:outline-none focus:shadow-outline" %>
              </div>
              <div class="actions">
                <%= f.submit "Sign up", class: "bg-black text-white font-bold text-lg hover:bg-gray-700 p-2 mt-8" %>
              </div>
            <% end %>
            <%= render "devise/shared/links" %>
          </div>
        </div>
      </div>
    <div class="w-1/2 shadow-2xl">
      <img class="object-cover w-full h-screen hidden md:block" src="https://source.unsplash.com/IXUM4cJynP0">
    </div>
  </div>
