<div class="bg-white font-family-karla h-screen">
  <div class="w-full flex flex-wrap">
    <div class="w-full md:w-1/2 flex flex-col">
      <div class="flex justify-center md:justify-start pt-12 md:pl-12 md:-mb-12">
        <div class="flex flex-col justify-center md:justify-start my-auto pt-8 md:pt-0 px-8 md:px-24 lg:px-32">
          <p class="text-center text-3xl">Dive in.</p>
          <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {:class => "flex flex-col pt-3 md:pt-8" }) do |f| %>
            <div class="flex flex-col pt-4">
              <%= f.label :email, class: "text-lg" %><br />
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 mt-1 leading-tight focus:outline-none focus:shadow-outline" %>
            </div>
            <div class="flex flex-col pt-4">
              <%= f.label :password, class: "text-lg" %><br />
              <%= f.password_field :password, autocomplete: "current-password", class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 mt-1 leading-tight focus:outline-none focus:shadow-outline" %>
            </div>
            <% if devise_mapping.rememberable? %>
              <div class="flex pt-4 space-x-3">
                <%= f.check_box :remember_me %>
                <%= f.label :remember_me, class: "underline font-semibold" %>
              </div>
            <% end %>
            <div class="actions">
              <%= f.submit "Log in", class: "bg-black text-white font-bold text-lg hover:bg-gray-700 p-2 mt-8" %>
            </div>
          <% end %>
          <%= render "devise/shared/links", class: "underline font-semibold" %>
        </div>
      </div>
    </div>
    <div class="w-1/2 shadow-2xl">
      <img class="object-cover w-full h-screen hidden md:block" src="https://source.unsplash.com/IXUM4cJynP0">
    </div>
  </div>
</div>
